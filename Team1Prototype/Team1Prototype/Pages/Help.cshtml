@page
@model Team1Prototype.Models.HelpRequest
@{
    ViewData["Title"] = "Home page";
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/help.css" asp-append-version="true" />

<div class="row">
    <div class="col-sm-3">
        <br />
        <br />
        <br />
        <br />
        <p class="custom-h2 text-center"><strong>Please fill out this form if you have any questions about courses, instructors or computer science.</strong></p>
    </div>
    <div class="col-sm-3"></div>
    <div class="col-sm-3">
        <p class="custom-h2 text-center"><strong>Contact us for help!</strong></p>

        @using (Html.BeginForm("Index", "Help", FormMethod.Post))
        {
            <div class="form-group">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control input-field first", @placeholder = "First name*" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input-field last", @placeholder = "Last name*" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-field email", @placeholder = "Email*" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control input-field phone", @placeholder = "Phone number" })
            </div>
            <div class="form-group">
                @Html.TextAreaFor(m => m.Message, new { @class = "form-control input-field question-box message", @placeholder = "Questions or comments?" })
            </div>
            <input type="submit" value="SUBMIT" class="btn btn-primary" style="margin-bottom: 252px" />
        }
    </div>
</div>
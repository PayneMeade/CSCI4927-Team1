@page
@model Team1Prototype.Models.HelpRequest
@{
    ViewData["Title"] = "Home page";
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">


<div class="row">
    <div class="col-sm-3">
        <br />
        <br />
        <br />
        <br />
        <p class="custom-h2 text-center"><strong>Please fill out this form if you have any questions about courses, instructors or computer science.</strong></p>
    </div>
    <div class="col-sm-3"></div>
    <div class="col-sm-3">
            <p class="custom-h2 text-center"><strong>Contact us for help!</strong></p>

            @using (Html.BeginForm("Index", "Help", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control input-field", @placeholder = "First name*" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input-field", @placeholder = "Last name*" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-field", @placeholder = "Email*" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control input-field", @placeholder = "Phone number" })
                </div>
                <div class="form-group">
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control input-field question-box", @placeholder = "Questions or comments?" })
                </div>
                <input type="submit" value="SUBMIT" class="btn btn-primary" />
            }
    </div>
</div>



<style>
    body {
        font-family: 'Montserrat', sans-serif;
        font-weight: 600;
    }

    .question-box {
        width: 305px;
        height: 168px;
    }
    .btn.btn-primary.w-100 {
        font-size: 12px !important;
    }
    .btn {
        width: 100% !important;
        background-color: #002D62 !important;
        border-radius: 11px !important;
        color: #fff;
        border: none !important;
        font-size: 12px !important;
    }
    .input-field {
        background-color: #F1F1F1;
        border-radius: 11px !important;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
        border: none !important;
        font-size: 12px !important;
    }
    .input-field::-webkit-input-placeholder { /* Chrome/Opera/Safari */
        font-weight: bold;
        color: #C9B5B5 !important;
    }
    .input-field::-moz-placeholder { /* Firefox 19+ */
        font-weight: bold;
        color: #C9B5B5 !important;
    }
    .input-field:-ms-input-placeholder { /* IE 10+ */
        font-weight: bold;
        color: #C9B5B5 !important;
    }
    .input-field:-moz-placeholder { /* Firefox 18- */
        font-weight: bold;
        color: #C9B5B5 !important;
    }

.contact-container {
    width: 80%;
    margin: 0 auto;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}
.custom-h2 {
    font-size: 12px;
    color: #002D62 !important;
}

form {
    margin-top: 20px;
}

.form-group {
    margin-bottom: 20px;
}

label {
    display: block;
    margin-bottom: 5px;
}

input[type="text"],
input[type="email"],
input[type="tel"],
textarea {
    width: 100%;
    padding: 10px;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 14px;
}

button {
    padding: 10px 15px;
    background-color: #333;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

footer {
    margin-top: 30px;
    border-top: 1px solid #ccc;
    padding-top: 20px;
    text-align: center;
}

.social-icons {
    margin-top: 10px;
}

.social-icons a {
    margin: 0 5px;
}
</style>



